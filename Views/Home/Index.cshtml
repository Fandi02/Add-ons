@model IEnumerable<Add.ons.Web.Models.Aplikasi>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @* Column 1 *@
    <div class="row g-0">
        <div class="col-4 col-md-4 p-5">
            <div id="list-example" class="list-group">
                <p class="category-text">Category</p>
                <a class="list-group-item list-group-item-action" href="#home">Home</a>
                <a class="list-group-item list-group-item-action" href="#blog">Blogging</a>
                <a class="list-group-item list-group-item-action" href="#dev">Developer tools</a>
                <a class="list-group-item list-group-item-action" href="#com">Communication</a>
                <a class="list-group-item list-group-item-action" href="#social">Social</a>
            </div>
        </div>

